package jaxb;

import java.io.File;
import java.util.ArrayList;
import javax.xml.bind.JAXBContext;
import javax.xml.bind.JAXBException;
import javax.xml.bind.Unmarshaller;

public class LecturaJAXB {

    public static void main(String[] args) throws JAXBException {
    	
    	String sep = File.separator;
		File miFichero = new File("C:"+sep+"Users"+sep+"msi"+sep+"Desktop"+sep+"libreria.xml");
		
        JAXBContext context = JAXBContext.newInstance(Libreria.class);
        Unmarshaller unmarshaller = context.createUnmarshaller();
        Libreria libreria = (Libreria) unmarshaller.unmarshal(miFichero);
        
        System.out.println("Nombre: "+libreria.getNombre());
        
        ArrayList<Libro> libros = libreria.getLibros();
        
        for(Libro l: libros){
            System.out.println(l.getIsbn()+" "+l.getTitulo()+" "+l.getAutor());
        }
    }
    
}
